<form class='research'>
    <div class='slidesWindow'>
        <div class='slidesContainer d-flex flex-nowrap'>
            <div class="slide">
                {% include 'research/metric.html.twig' %}
            </div>
            {% for question in questions %}
                <div class="slide row middle-section flex-sm-wrap flex-lg-nowrap">
                    <div class="col-sm-12 col-lg-5 d-sm-flex d-lg-block p-0 mb-4 mb-lg-0 ml-lg-0 mx-auto flex-wrap flex-md-nowrap flex-lg-wrap">
                        {% include 'research/question.html.twig' with {
                                'index' : loop.index - 1
                            } %}
                        {% include 'research/answers.html.twig' with {
                                'index' : loop.index - 1
                            } %}
                    </div>
                    {% include 'research/search.html.twig' with {
                            'index' : loop.index - 1
                        } %}
                </div>
            {% endfor %}
        </div>
    </div>
</form>